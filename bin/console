#!/usr/bin/env ruby

require 'bundler/setup'
require 'codice_fiscale'

puts 'Welcome to CodiceFiscaleRuby console!'
puts 'You can generate a Codice Fiscale like this:'
puts 'cf = CodiceFiscale.generate(first_name: "Mario", last_name: "Rossi", gender: "M", ' \
     'date_of_birth: Date.new(1980, 5, 20), place_of_birth: "ROMA")'
puts 'cf'
puts
puts 'Or validate a CF like this:'
puts "CodiceFiscale.valid?('RSSMRA80E15H501Z')"

require 'irb'
IRB.start(__FILE__)
# Add this blank line below (your editor might do this automatically)
